if [[ $# -ne 2 ]] ; then
	echo "$0: two arguments needed" 1>&2
	exit 1
fi

target="${1}"
linkname="${2}"
[[ ${target:0:1} == "/" ]] && target="${EPREFIX}${target}"
destdir=${linkname%/*}
[[ ! -d ${ED}${destdir} ]] && dodir "${destdir}"

exec ln -snf "${target}" "${ED}/${linkname}"

