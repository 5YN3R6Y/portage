if [[ $# -lt 1 ]] ; then
	echo "$0: at least one argument needed" 1>&2
	exit 1
fi

if [[ ! -d ${ED}${EXEDESTTREE} ]] ; then
	install -d "${ED}${_E_EXEDESTTREE_}"
fi

for x in "$@" ; do
	if [ -L "${x}" ] ; then
		cp "${x}" "${T}"
		mysrc="${T}"/`basename "${x}"`
	elif [ -d "${x}" ] ; then
		echo "doexe: warning, skipping directory ${x}"
		continue
	else
		mysrc="${x}"
	fi
	install ${EXEOPTIONS} "${mysrc}" "${ED}${_E_EXEDESTTREE_}"
done
