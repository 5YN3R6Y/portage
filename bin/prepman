if [[ -z $1 ]] ; then 
	mandir="${ED}usr/share/man"
else
	mandir="${ED}$1/man"
fi

if [[ ! -d ${mandir} ]] ; then
	eqawarn "QA Notice: prepman called with non-existent dir '${mandir#${ED}}'"
	exit 0
fi

exec ecompressdir "${mandir#${ED}}"
