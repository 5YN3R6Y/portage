ret=0

echo "man:"
for x in "${ED}"/opt/*/man "${ED}"/usr/share/man "${ED}"/usr/local/man "${ED}"/usr/X11R6/man ; do
	if [[ -d ${x} ]] ; then
		x=${x#${ED}}
		x=${x%/man}
		prepman "${x}"
		((ret+=$?))
	fi
done

exit ${ret}
