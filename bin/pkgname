import sys, os
sys.path.insert(0, os.environ.get("PORTAGE_PYM_PATH", "@PORTAGE_BASE@/pym"))

import portage

a=portage.pkgsplit(sys.argv[1])
if a:
	print a[0],a[1],a[2][1:]
	sys.exit(0)
else:
	print '!!! Error: package name is invalid.'
	sys.exit(1)
