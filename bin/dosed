mysed="s:${ED}::g"

for x in "$@" ; do
	y="${ED}${x}"
	if [ -e "${y}" ] ; then
		if [ -f "${y}" ] ; then
			sed -i -e "${mysed}" "${y}"
		else
			echo "${y} is not a regular file!"
			exit 1
		fi
	else
		mysed="${x}"
	fi
done
