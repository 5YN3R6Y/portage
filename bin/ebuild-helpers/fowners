source "${PORTAGE_BIN_PATH:-@PORTAGE_BASE@/bin}"/isolated-functions.sh

# we can't prefix all arguments because
# chown takes random options
slash="/"
chown "${@/#${slash}/${ED}${slash}}"
ret=$?
[[ $ret -ne 0 ]] && helpers_die "$0 failed"
exit $ret
