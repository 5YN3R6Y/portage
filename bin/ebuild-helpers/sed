# $Id$

scriptpath=${BASH_SOURCE[0]}
scriptname=${scriptpath##*/}

if [[ ${EPREFIX} != "" ]] ; then
	echo "using Prefix and hitting this lame BSD sed wrapper in ${scriptpath}? That's a bug!" > /dev/stderr
	exit 1
fi

if [[ sed == ${scriptname} ]] && [[ -n ${ESED} ]]; then
	exec ${ESED} "$@"
elif type -P g${scriptname} > /dev/null ; then
	exec g${scriptname} "$@"
else
	old_IFS="${IFS}"
	IFS=":"
 
	for path in $PATH; do
		[[ ${path}/${scriptname} == ${scriptpath} ]] && continue
		if [[ -x ${path}/${scriptname} ]]; then
			exec ${path}/${scriptname} "$@"
			exit 0
		fi
	done
	
	IFS="${old_IFS}"
fi
 
exit 1
