if [[ -z $1 ]] ; then
	vecho "${0##*/}: at least one argument needed"
	exit 1 	
fi

if [[ ! -d ${ED}usr/share/info ]] ; then
	install -d "${ED}usr/share/info" || exit 1
fi

install -m0644 "$@" "${ED}usr/share/info"
rval=$?
if [ $rval -ne 0 ] ; then
	for x in "$@" ; do
		[ -e "$x" ] || echo "!!! ${0##*/}: $x does not exist" 1>&2
	done
fi
exit $rval
